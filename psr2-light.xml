<?xml version="1.0"?>
<ruleset name="PSR2-light">
    <description>From PSR2 exclude some rule</description>
    <!-- Include the whole PSR-2 standard -->
    <rule ref="PSR2">
<!--Exclude error "Each class must be in a namespace of at least one level"-->
<!--(a top-level vendor name)-->
        <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"/>
<!--Class name "Domain_CollectionFactory" is not in camel caps format-->
        <exclude name="Squiz.Classes.ValidClassName.NotCamelCaps"/>

    </rule>
    ...
</ruleset>
